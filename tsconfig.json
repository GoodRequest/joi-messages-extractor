{
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2019",
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./demo/src/types/*",
      "node_modules/@types"
    ]
  },
  "include": [
    "./demo/src/**/*",
    "./demo/locales/*",
    "./src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}