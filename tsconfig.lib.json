{
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "./lib",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}